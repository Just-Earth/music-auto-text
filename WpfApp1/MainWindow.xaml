<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Black">

    <Window.Resources>
        <!-- Default button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="MinHeight" Value="44" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="translate" X="0" />
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="translate" Storyboard.TargetProperty="X" To="8" Duration="0:0:0.18">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="translate" Storyboard.TargetProperty="X" To="0" Duration="0:0:0.18">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="Bold" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Flat text button style for left categories -->
        <Style x:Key="LeftCategoryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Settings icon button style -->
        <Style x:Key="SettingsIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter x:Name="content" HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True">
                                <ContentPresenter.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                </ContentPresenter.RenderTransform>
                            </ContentPresenter>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="content" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.18" Duration="0:0:0.18" />
                                        <DoubleAnimation Storyboard.TargetName="content" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.18" Duration="0:0:0.18" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="content" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.18" />
                                        <DoubleAnimation Storyboard.TargetName="content" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.18" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slide-in storyboard for left categories -->
        <Storyboard x:Key="SlideInStoryboard">
            <DoubleAnimation Storyboard.TargetName="LeftCategoriesPanel" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="-280" To="0" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LeftCategoriesPanel" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.35" />
        </Storyboard>

        <!-- Logo move and player fade-in storyboard -->
        <Storyboard x:Key="MoveLogoStoryboard">
            <!-- scale down the logo -->
            <DoubleAnimation Storyboard.TargetName="LargeLogoScale" Storyboard.TargetProperty="ScaleX" From="1.0" To="0.28" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LargeLogoScale" Storyboard.TargetProperty="ScaleY" From="1.0" To="0.28" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <!-- move logo to bottom-right-ish (tweak values if needed) -->
            <DoubleAnimation Storyboard.TargetName="LargeLogoTranslate" Storyboard.TargetProperty="X" From="0" To="250" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LargeLogoTranslate" Storyboard.TargetProperty="Y" From="0" To="120" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <!-- fade in song title slightly delayed -->
            <DoubleAnimation Storyboard.TargetName="SongTitleText" Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.25" Duration="0:0:0.45">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <!-- fade in progress area -->
            <DoubleAnimation Storyboard.TargetName="ProgressAreaGrid" Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.3" Duration="0:0:0.45">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <!-- fade in play button -->
            <DoubleAnimation Storyboard.TargetName="PlayPauseBottomButton" Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.3" Duration="0:0:0.45" />
        </Storyboard>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="MainScale" ScaleX="1" ScaleY="1" />
        </Grid.LayoutTransform>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Static background rectangle (image fill) -->
        <Rectangle x:Name="StaticBackgroundRect" Fill="Black" Visibility="Visible" Panel.ZIndex="-2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <!-- Back button (appears when inside player view) -->
        <Button x:Name="BackButton" Grid.ColumnSpan="2" Content="←" Width="36" Height="36" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Style="{StaticResource SettingsIconButton}" Panel.ZIndex="3" Visibility="Collapsed" />

        <!-- Left panel with buttons -->
        <StackPanel x:Name="LeftButtonsPanel" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" Panel.ZIndex="2">
            <Button x:Name="LoadMp3Button" Content="загрузить свое mp3" Margin="0,0,0,10" Width="212" Height="55" FontSize="18" />
            <Button x:Name="RealTimeButton" Content="Real Time" Width="212" Height="55" FontSize="18" />

            <!-- Model selection for Whisper -->
            <StackPanel Orientation="Vertical" Margin="0,12,0,6" Width="212">
                <TextBlock Text="Модель Whisper:" Foreground="White" FontSize="12" Margin="2,0,0,4" />
                <ComboBox x:Name="ModelComboBox" Width="212" Height="28">
                    <ComboBoxItem Content="tiny" IsSelected="True" />
                    <ComboBoxItem Content="base" />
                    <ComboBoxItem Content="small" />
                    <ComboBoxItem Content="medium" />
                    <ComboBoxItem Content="large" />
                </ComboBox>
                <TextBlock Text="Устройство:" Foreground="White" FontSize="12" Margin="2,8,0,4" />
                <ComboBox x:Name="DeviceComboBox" Width="212" Height="28">
                    <ComboBoxItem Content="cpu" IsSelected="True" />
                    <ComboBoxItem Content="cuda" />
                </ComboBox>
            </StackPanel>

            <!-- Neural aligner tools (hidden) -->
            <Button x:Name="GenerateSamplesButton" Content="Сгенерировать примеры" Margin="0,12,0,6" Width="212" Height="40" FontSize="14" Visibility="Collapsed" />
            <Button x:Name="TrainModelButton" Content="Обучить модель" Margin="0,0,0,6" Width="212" Height="40" FontSize="14" Visibility="Collapsed" />
            <Button x:Name="UseNeuralAlignButton" Content="Использовать нейрон" Margin="0,0,0,6" Width="212" Height="40" FontSize="14" Visibility="Collapsed" />
            <Button x:Name="InstallDepsButton" Content="Установить зависимости (Python)" Margin="0,6,0,6" Width="212" Height="40" FontSize="14" />

            <!-- Dependency install progress UI -->
            <StackPanel x:Name="DepsProgressPanel" Width="212" Margin="0,8,0,0" Visibility="Collapsed">
                <TextBlock x:Name="DepsStatusText" Text="" Foreground="White" FontSize="12" TextWrapping="Wrap" />
                <ProgressBar x:Name="DepsProgressBar" Height="14" Minimum="0" Maximum="100" Value="0" Margin="0,6,0,0" />
            </StackPanel>
        </StackPanel>

        <!-- Settings button top-right -->
        <Button x:Name="SettingsButton" Grid.Column="1" Content="⚙" Width="36" Height="36" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Style="{StaticResource SettingsIconButton}" Panel.ZIndex="2" />

        <!-- Song title centered at top of window -->
        <TextBlock x:Name="SongTitleText" Grid.ColumnSpan="2" Text="" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,12,0,0" TextAlignment="Center" Opacity="0" />

        <!-- Large centered logo -->
        <TextBlock x:Name="LargeLogoText" Grid.ColumnSpan="2" Text="This is Earth" Foreground="White" FontSize="92" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Panel.ZIndex="4" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="LargeLogoScale" ScaleX="1" ScaleY="1" />
                    <TranslateTransform x:Name="LargeLogoTranslate" X="0" Y="0" />
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

        <!-- Player and lyrics area -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Lyrics area (centered) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="LyricsPanel" HorizontalAlignment="Center" Width="600" />
            </ScrollViewer>

        </Grid>

        <!-- Bottom centered custom progress and control across whole window -->
        <Grid x:Name="ProgressAreaGrid" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,36" Visibility="Collapsed" Panel.ZIndex="5" Opacity="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <!-- progress and volume area -->
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- progress area -->
                    <Grid Grid.Column="0" Width="960" Height="36" HorizontalAlignment="Center">
                        <Canvas x:Name="ProgressCanvas" Width="960" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="ProgressCanvas_MouseLeftButtonDown" MouseLeftButtonUp="ProgressCanvas_MouseLeftButtonUp" MouseMove="ProgressCanvas_MouseMove">
                            <!-- track (dark blue) -->
                            <Rectangle x:Name="ProgressTrackRect" Width="960" Height="8" RadiusX="4" RadiusY="4" Fill="#072146" Canvas.Left="0" Canvas.Top="14" />
                            <!-- filled (blue) -->
                            <Rectangle x:Name="ProgressFillRect" Width="0" Height="10" RadiusX="5" RadiusY="5" Fill="#1E90FF" Opacity="0.95" Canvas.Left="0" Canvas.Top="13" />
                            <!-- moving knob -->
                            <Ellipse x:Name="ProgressKnobEllipse" Width="12" Height="12" Fill="#FFFFFFFF" Stroke="#DDFFFFFF" Canvas.Left="0" Canvas.Top="12" />
                        </Canvas>
                    </Grid>

                    <!-- volume container (hover to show popup) -->
                    <Grid Grid.Column="1" x:Name="VolumeContainer" Width="56" Height="36" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0" MouseEnter="VolumeContainer_MouseEnter" MouseLeave="VolumeContainer_MouseLeave">
                        <!-- Popup panel above the button so it won't be clipped by layout -->
                        <Popup x:Name="VolumePopup" PlacementTarget="{Binding ElementName=VolumeButton}" Placement="Top" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade">
                            <Border x:Name="VolumePopupBorder" Width="48" Height="220" Background="#CC000000" CornerRadius="6" Padding="6" RenderTransformOrigin="0.5,0.0">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="0.9" ScaleY="0.9" />
                                </Border.RenderTransform>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Slider x:Name="VolumeSlider" Orientation="Vertical" Minimum="0" Maximum="100" ValueChanged="VolumeSlider_ValueChanged" Value="100" Height="188">
                                        <Slider.Template>
                                            <ControlTemplate TargetType="Slider">
                                                <Grid Width="40" Height="200">
                                                    <!-- track background -->
                                                    <Rectangle Width="6" Fill="#bfbfbf" RadiusX="3" RadiusY="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="0,8,0,8" />
                                                    <!-- active fill (placed above background) -->
                                                    <Rectangle x:Name="PART_Fill" Width="6" Fill="#e6e6e6" RadiusX="3" RadiusY="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,8,0,8" Height="0" />
                                                    <Track x:Name="PART_Track" VerticalAlignment="Stretch" HorizontalAlignment="Center" IsDirectionReversed="false" Orientation="Vertical" Margin="0,8,0,8">
                                                        <Track.DecreaseRepeatButton>
                                                            <RepeatButton Command="Slider.DecreaseLarge" Opacity="0" IsHitTestVisible="False" />
                                                        </Track.DecreaseRepeatButton>
                                                        <Track.IncreaseRepeatButton>
                                                            <RepeatButton Command="Slider.IncreaseLarge" Opacity="0" IsHitTestVisible="False" />
                                                        </Track.IncreaseRepeatButton>
                                                        <Track.Thumb>
                                                            <Thumb Width="12" Height="12">
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="Thumb">
                                                                        <Ellipse Fill="#e6e6e6" Stroke="#bdbdbd" StrokeThickness="1" />
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Slider.Template>
                                    </Slider>
                                </StackPanel>
                            </Border>
                        </Popup>

                        <Button x:Name="VolumeButton" Content="🔊" Width="36" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource SettingsIconButton}" />
                    </Grid>
                </Grid>

                <!-- time labels under progress: current time (left) and total duration (right) -->
                <Grid Width="960" HorizontalAlignment="Center" Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="ProgressCurrentText" Grid.Column="0" Text="0:00" Foreground="White" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBlock Grid.Column="1" Text="" />
                    <TextBlock x:Name="ProgressTotalText" Grid.Column="2" Text="0:00" Foreground="White" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Right" />
                </Grid>

                <Button x:Name="PlayPauseBottomButton" Width="56" Height="40" Content="▶" Style="{StaticResource SettingsIconButton}" HorizontalAlignment="Center" Margin="0,8,0,0" Visibility="Collapsed" Opacity="0" />
            </StackPanel>
        </Grid>

        <!-- Full-window settings overlay (hidden by default) -->
        <Border x:Name="SettingsOverlay" Grid.ColumnSpan="2" Background="#88000000" Visibility="Collapsed" Panel.ZIndex="100">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
                <!-- Centered settings box -->
                <Border x:Name="SettingsBox" Width="760" Height="380" Background="Transparent" CornerRadius="4" Padding="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Title -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="НАСТРОЙКИ" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,12" />

                        <!-- Left categories -->
                        <StackPanel x:Name="LeftCategoriesPanel" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,8,24,0" Opacity="0">
                            <StackPanel.RenderTransform>
                                <TranslateTransform X="-280" />
                            </StackPanel.RenderTransform>
                            <Button x:Name="LeftMainButton" Style="{StaticResource LeftCategoryButton}">
                                <TextBlock Text="Основные" Foreground="White" FontSize="16" Margin="0,6,0,6" />
                            </Button>
                        </StackPanel>

                        <!-- Right panels -->
                        <Grid Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="8,8,0,0">
                            <!-- Main settings -->
                            <StackPanel x:Name="MainSettingsPanel">
                                <TextBlock Text="Основные настройки" Foreground="#DDFFFFFF" FontSize="14" Margin="0,0,0,12" />
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,0">
                                    <TextBlock Text="Размер интерфейса" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0" />
                                    <Slider x:Name="ScaleSlider" Minimum="0.5" Maximum="2.0" Value="1.0" Width="300" TickFrequency="0.1" IsSnapToTickEnabled="False" />
                                </StackPanel>
                                <TextBlock Text="Другие настройки будут здесь" Foreground="#88FFFFFF" Margin="0,12,0,0" />
                            </StackPanel>

                        </Grid>

                        <!-- Bottom action buttons -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button x:Name="CancelSettingsButton" Content="Отмена" Width="80" Margin="0,0,8,0" />
                            <Button x:Name="ApplySettingsButton" Content="Применить" Width="100" />
                            <Button x:Name="CloseSettingsButton" Content="Закрыть" Width="80" Margin="8,0,0,0" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Lyrics input overlay shown after selecting file -->
        <Border x:Name="LyricsInputOverlay" Grid.ColumnSpan="2" Background="#CC000000" Visibility="Collapsed" Panel.ZIndex="200">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="640" Height="260">
                <Border Background="#111111" CornerRadius="8" Padding="18">
                    <StackPanel>
                        <TextBlock Text="Введите артиста и название трека" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" />
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="Артист:" Foreground="White" VerticalAlignment="Center" Width="80" />
                            <TextBox x:Name="ArtistTextBox" Width="420" Height="28" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Трек:" Foreground="White" VerticalAlignment="Center" Width="80" />
                            <TextBox x:Name="TitleTextBox" Width="420" Height="28" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                            <Button x:Name="LoadLyricsButton" Content="Загрузить текст" Width="140" Margin="0,0,8,0" />
                            <Button x:Name="CancelLyricsButton" Content="Отмена" Width="80" />
                        </StackPanel>

                        <!-- area for not-found actions -->
                        <StackPanel x:Name="LyricsNotFoundPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0" Visibility="Collapsed">
                            <Button x:Name="RetryLyricsButton" Content="Попробовать снова" Width="140" Margin="6,0" />
                            <Button x:Name="ContinueNoLyricsButton" Content="Продолжить без текста" Width="160" Margin="6,0" />
                            <Button x:Name="ExitToMenuButton" Content="Выйти в меню" Width="120" Margin="6,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

    </Grid>
</Window>